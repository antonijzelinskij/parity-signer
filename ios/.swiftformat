# format options
--allman false
--indent 4
--maxwidth 120
--commas inline
--decimalgrouping 3
--wraparguments before-first

# file options
--exclude PolkadotVault/Generated/
--exclude PolkadotVault/Stubs/Stubs.swift
--exclude PolkadotVault/Previews/Stubs.swift

# rules
--enable blankLineAfterImports
--enable blockComments
--enable isEmpty
--enable wrapAttributes
--enable wrapEnumCases
--enable wrapLoopBodies
--enable wrapSwitchCases
--enable wrapMultilineConditionalAssignment
--enable leadingDelimiters
--enable modifierOrder
--disable preferForLoop
--disable wrapMultilineStatementBraces
--disable trailingCommas
--disable redundantProperty
--disable blankLinesBetweenImports
--disable docComments
--disable emptyExtensions
--disable environmentEntry
--disable noForceTryInTests
--disable noForceUnwrapInTests
--disable redundantAsync
--disable redundantEquatable
--disable redundantMemberwiseInit
--disable redundantProperty
--disable redundantThrows
--disable wrapPropertyBodies
--disable simplifyGenericConstraints
--disable validateTestCases
--disable testSuiteAccessControl
--disable wrapPropertyBodies
--disable wrapFunctionBodies
--disable redundantViewBuilder